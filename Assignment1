CREATE TABLE IF NOT EXISTS Orders (
    Onum INT AUTO_INCREMENT PRIMARY KEY,
    Amt DECIMAL(20 , 2 ),
    Odate DATE NOT NULL,
    Cnum INT,
    FOREIGN KEY(Cnum)
    REFERENCES Customers(Cnum),
    Snum INT,
    FOREIGN KEY(Snum)
    REFERENCES SalesPeople(Snum)
) ;
